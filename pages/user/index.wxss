page {
  background-color: #f4f4f4;
}
page .user {
  height: 360rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #eb4450;
}
page .user .token-btn {
  position: relative;
  opacity: 0;
}
page .user .user-text {
  position: absolute;
  top: 55rpx;
  color: #fff;
}
page .user .token-btn-avatar {
  position: absolute;
  width: 140rpx;
  height: 140rpx;
  border: 5rpx solid #fff;
  border-radius: 80rpx;
}
page .user .token-btn-avatars {
  position: absolute;
  width: 100%;
  filter: blur(10px);
}
page .user .avatar {
  position: absolute;
  width: 140rpx;
  height: 140rpx;
  border-radius: 80rpx;
}
page .collect {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 0 15rpx;
  height: 120rpx;
  background-color: #fff;
  position: relative;
  top: -20rpx;
}
page .collect .collect-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}
page .order {
  margin: 0 15rpx;
  background-color: #fff;
  color: #000;
}
page .order .order-title {
  height: 88rpx;
  padding-left: 30rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  border-bottom: 1px solid #ddd;
}
page .order .order-content {
  height: 166rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
page .order .order-content .order-item {
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
page .receiving {
  margin: 15rpx;
  padding: 0 20rpx;
  height: 88rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
}
page .info .info-content {
  margin: 0 15rpx;
  padding: 0 20rpx;
  height: 88rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  border-bottom: 1rpx solid #ccc;
}
